citHeader("To cite in publications use:")

bibentry(
    bibtype = "Article",
    title = "Introducing BACCO, an R bundle for Bayesian Analysis of Computer Code Output",
	 author = person("R. K. S. Hankin"),
         journal = "Journal of Statistical Software",
         year = "2005",
	 volume = "14",
	 issue = "16",
	 month = "October",
	 textVersion = {
             paste("R. K. S. Hankin 2005.",
	     "Introducing BACCO, an R bundle for Bayesian Analysis of Computer Code Output.", 
	 "Journal of Statistical Software,", 
	 "14(16)")}
)
